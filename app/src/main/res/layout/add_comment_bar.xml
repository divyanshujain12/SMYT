<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/commentBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fourty_dp"
    android:layout_alignParentBottom="true"
    android:background="@drawable/flat_yellow_thick_border">

    <com.neopixl.pixlui.components.edittext.EditText
        android:id="@+id/commentsET"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/fourty_dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:hint="Write Comment Here"
        android:padding="@dimen/ten_dp"
        android:textColorHint="@color/colorPrimary"
        android:textSize="@dimen/sixteen_sp"
        pixlui:typeface="Roboto-Regular.ttf" />

    <FrameLayout
        android:layout_width="@dimen/fourty_dp"
        android:layout_height="@dimen/fourty_dp"
        android:layout_gravity="right|center_vertical">

        <ImageView
            android:id="@+id/sendCommentIV"
            android:layout_width="@dimen/fourty_dp"
            android:layout_height="@dimen/fourty_dp"
            android:padding="@dimen/five_dp"
            android:src="@drawable/icon_comment_send" />

        <ProgressBar
            android:id="@+id/commentPB"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/progress_bar_color"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>