<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five_dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/one_hundred_fifty_five_dp"
        android:layout_height="@dimen/one_hundred_fourty_five_dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <FrameLayout
            android:id="@+id/videoFL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_hundred_dp">

            <ImageView
                android:id="@+id/userIV"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/top_corner_white"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/user" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha=".5"
                android:background="#000000" />

            <ImageView
                android:id="@+id/playVideoIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/play" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/fourty_five_dp"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/five_dp">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/userNameTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:alpha=".65"
                android:maxLines="2"
                android:text="Neanda"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Medium.ttf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/userTimeTV"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:gravity="right"
                android:text="22 min ago"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>