<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp"
    tools:showIn="@layout/user_profile_activity">

    <FrameLayout
        android:layout_width="@dimen/one_hundred_fifty_five_dp"
        android:layout_height="@dimen/one_hundred_fifty_five_dp"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/nameInImgTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/color_primary_with_eight_eight"
            android:gravity="center"
            android:padding="@dimen/ten_dp"
            android:text="@string/dummy_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/eighteen_sp"
            pixlui:typeface="Roboto-Regular.ttf" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="@dimen/one_hundred_fifty_five_dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/nameFL"
            android:padding="@dimen/five_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dummy_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/twenty_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/editNameIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/icon_edit" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/phoneNumberFL"
            android:layout_width="match_parent"
            android:padding="@dimen/five_dp"
            android:layout_height="wrap_content">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/phoneNumberTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/dummy_number"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <ImageView
                android:id="@+id/editPhoneNumberIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/icon_edit" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/followersFL"
            android:layout_width="match_parent"
            android:padding="@dimen/five_dp"
            android:layout_height="wrap_content">

            <com.neopixl.pixlui.components.textview.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:text="Followers"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/followersCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="@string/dummy_followers_count"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/followingFL"
            android:layout_width="match_parent"
            android:padding="@dimen/five_dp"
            android:layout_height="wrap_content">

            <com.neopixl.pixlui.components.textview.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Following"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/followingCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="center"
                android:text="@string/dummy_followers_count"
                android:textColor="@android:color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>