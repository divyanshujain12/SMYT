<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="@dimen/one_hundred_fifty_five_dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    android:layout_margin="@dimen/five_dp"
    card_view:cardElevation="@dimen/five_dp"
    card_view:cardUseCompatPadding="true">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/userIV"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_twenty_dp"
        android:background="@drawable/top_corner_white"
        android:padding="3dp"
        android:scaleType="fitXY"
        android:src="@drawable/user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/thirty_dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/userNameTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:alpha=".65"
            android:maxLines="2"
            android:text="Neanda"
            android:textSize="@dimen/thirteen_sp"
            pixlui:typeface="Roboto-Medium.ttf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/userTimeTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:gravity="right"
            android:text="22 min ago"
            android:textSize="@dimen/ten_sp"
            pixlui:typeface="Roboto-Regular.ttf" />

    </LinearLayout>
</LinearLayout>
</android.support.v7.widget.CardView>
