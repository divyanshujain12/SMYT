    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="1000dp"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/fourty_dp"
        android:orientation="vertical">

        <include layout="@layout/video_title_bar" />

        <include layout="@layout/single_video_inside_item" />

        <include layout="@layout/uploaded_video_comment_bar" />

        <include layout="@layout/left_side_voting_view" />

        <include layout="@layout/comments_rv" />

    </LinearLayout>

    <include layout="@layout/add_comment_bar" />
</RelativeLayout>