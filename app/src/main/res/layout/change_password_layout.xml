<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:minWidth="1000dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/viewA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/five_dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"
                android:orientation="vertical"
                android:padding="@dimen/ten_dp">

                <com.neopixl.pixlui.components.textview.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/old_password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    pixlui:typeface="Roboto-Medium.ttf" />

                <com.neopixl.pixlui.components.edittext.EditText
                    android:id="@+id/oldPasswordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_white_full"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    pixlui:typeface="Roboto-Regular.ttf" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="@string/password"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fifteen_sp"
                    pixlui:typeface="Roboto-Medium.ttf" />

                <com.neopixl.pixlui.components.edittext.EditText
                    android:id="@+id/passwordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_white_full"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    pixlui:typeface="Roboto-Regular.ttf" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/twenty_dp"
                    android:text="@string/re_enter_password"
                    android:textColor="@color/white"

                    android:textSize="@dimen/fifteen_sp"
                    pixlui:typeface="Roboto-Medium.ttf" />

                <com.neopixl.pixlui.components.edittext.EditText
                    android:id="@+id/reEnterPasswordET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corner_white_full"
                    android:ems="10"

                    android:inputType="textPassword"
                    android:padding="@dimen/ten_dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/eighteen_sp"
                    pixlui:typeface="Roboto-Regular.ttf" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fifteen_dp"
            card_view:cardCornerRadius="@dimen/five_dp"
            card_view:cardUseCompatPadding="true">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/updateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_yellow"
                android:gravity="center"
                android:maxLines="2"
                android:padding="@dimen/fifteen_dp"
                android:text="@string/update"
                android:textColor="@android:color/white"
                android:textSize="@dimen/eighteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>