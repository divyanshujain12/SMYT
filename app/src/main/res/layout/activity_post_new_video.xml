<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_post_new_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.divyanshu.smyt.CustomViews.SingleVideoPlayerCustomView
        android:id="@+id/singleVideoPlayer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/deleteVideoTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="2"
            android:gravity="center"
            android:textColor="@color/thumb_down_color"
            android:background="@color/colorPrimaryDark"
            android:text="@string/delete_video"
            android:textSize="@dimen/fourteen_sp"
            pixlui:typeface="Roboto-Regular.ttf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/postVideoTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="@string/post_video"
            android:textSize="@dimen/fourteen_sp"
            pixlui:typeface="Roboto-Regular.ttf" />
    </LinearLayout>
</LinearLayout>
