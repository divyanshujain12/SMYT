<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_elevation_size"
    card_view:cardUseCompatPadding="true">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="@dimen/one_hundred_dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/thirty_dp"
            android:layout_height="@dimen/thirty_dp"
            android:layout_gravity="right|end"
            android:src="@drawable/premium_badge"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/ten_dp">

            <ImageView
                android:id="@+id/categoryIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/genre_icon_electronics"
                android:visibility="gone" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/genreNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="RAPH"
                pixlui:typeface="RAVIE.TTF" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/joinedCatFL"
            android:layout_width="@dimen/thirty_six_dp"
            android:layout_height="@dimen/fourty_dp"
            android:layout_gravity="right|bottom">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/joined_cat_back" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|bottom"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_right" />
        </FrameLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>