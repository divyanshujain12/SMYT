<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/five_dp">

        <com.example.divyanshu.smyt.CustomViews.RoundedImageView
            android:id="@+id/userIV"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/user" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ten_dp"
            android:orientation="vertical">

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/userNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".65"
                android:maxLines="2"
                android:text="Neanda"
                android:textSize="@dimen/sixteen_sp"
                pixlui:typeface="Roboto-Medium.ttf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/ageAndGenderTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".65"
                android:visibility="gone"
                android:maxLines="2"
                android:text="25 F"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Regular.ttf" />


            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/followersCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha=".65"
                android:maxLines="2"
                android:visibility="gone"
                android:text="Followers: 2145"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/aboutTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/five_dp"
                android:alpha=".65"
                android:maxLines="2"
                android:text="@string/about_dummy"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/winsCountTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".65"
                android:gravity="right"
                android:maxLines="2"
                android:textColor="@color/colorPrimary"
                android:text="Wins: 24"
                android:textSize="@dimen/twelve_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>