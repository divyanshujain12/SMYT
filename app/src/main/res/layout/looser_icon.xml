    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/thumb_down" />

    <com.neopixl.pixlui.components.textview.TextView xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
        android:id="@+id/userOneWinLoseTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Lost"
        android:textColor="@color/thumb_down_color"
        android:textSize="@dimen/fifteen_sp"
        pixlui:typeface="Roboto-Medium.ttf" />
</LinearLayout>