<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/five_dp"
    tools:showIn="@layout/single_video_item">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/grey_bg_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/commentsTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:alpha=".6"
            android:drawablePadding="@dimen/two_dp"
            android:drawableTop="@drawable/ic_cv_comment"
            android:maxLines="2"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingBottom="@dimen/five_dp"
            android:paddingTop="@dimen/five_dp"
            android:text="0 comment"
            android:textSize="@dimen/ten_sp"
            pixlui:typeface="Roboto-Regular.ttf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/viewsCountTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:alpha=".6"
            android:drawablePadding="@dimen/two_dp"
            android:drawableTop="@drawable/ic_cv_view"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/five_dp"
            android:text="0 views"
            android:textSize="@dimen/ten_sp"
            android:visibility="visible"
            pixlui:typeface="Roboto-Regular.ttf" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/userOneLikesCountTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/five_dp"
            android:alpha=".6"
            android:drawablePadding="@dimen/two_dp"
            android:drawableTop="@drawable/ic_cv_like_inactive"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="2"
            android:padding="@dimen/two_dp"
            android:text="0 likes"
            android:textSize="@dimen/ten_sp"
            android:visibility="visible"
            pixlui:typeface="Roboto-Regular.ttf" />
    </LinearLayout>

</RelativeLayout>
