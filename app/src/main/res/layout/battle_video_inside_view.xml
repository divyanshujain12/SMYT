<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/videoFL"
    android:layout_width="match_parent"
    android:layout_height="@dimen/two_hundred_fifty_dp"
    android:background="@color/black_with_fifity_five"
    android:paddingTop="@dimen/three_dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/twenty_five_dp"
        android:orientation="horizontal">

        <com.player.divyanshu.customvideoplayer.TwoVideoPlayers
            android:id="@+id/twoVideoPlayers"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <ImageView
        android:id="@+id/playVideoIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_play"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fifty_dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/five_dp"
            android:orientation="horizontal">

            <com.example.divyanshu.smyt.CustomViews.RoundedImageView
                android:id="@+id/firstUserIV"
                android:layout_width="@dimen/fourty_dp"
                android:layout_height="@dimen/fourty_dp"
                android:src="@drawable/noimage"
                app:riv_corner_radius="100dp" />

            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/firstUserNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/five_dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/five_dp"
            android:orientation="horizontal">


            <com.neopixl.pixlui.components.textview.TextView
                android:id="@+id/secondUserNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/five_dp"
                android:maxLines="2"
                android:textColor="@color/white"
                android:textSize="@dimen/fourteen_sp"
                pixlui:typeface="Roboto-Regular.ttf" />

            <com.example.divyanshu.smyt.CustomViews.RoundedImageView
                android:id="@+id/secondUserIV"
                android:layout_width="@dimen/fourty_dp"
                android:layout_height="@dimen/fourty_dp"
                android:src="@drawable/noimage"
                app:riv_corner_radius="100dp" />
        </LinearLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fullscreenFL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/fullscreenIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/five_dp"
            android:src="@drawable/full_screen_videos" />
    </FrameLayout>

    <ImageView
        android:id="@+id/playVideosIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/icon_play"
        android:visibility="gone" />
</FrameLayout>
