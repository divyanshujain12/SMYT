<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:id="@+id/toolbarView"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="@color/navigation_bar_color"
    app:elevation="8dp"
    app:title="@string/description"
    app:titleTextColor="@color/white"
    app:subtitleTextColor="@color/colorPrimary"
    app:layout_scrollFlags="scroll|enterAlways"
    app:layout_collapseMode="parallax"
    app:theme="@style/CustomToolbar">

    <RelativeLayout
        android:id="@+id/classNameRL"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backIV"
            android:layout_width="@dimen/fourty_five_dp"
            android:layout_height="@dimen/fourty_five_dp"
            android:layout_centerVertical="true"
            android:padding="@dimen/ten_dp"
            android:src="@drawable/back"
            android:visibility="gone"/>

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/backIV"
            android:singleLine="true"
            android:text="APPOINTMENT"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:textSize="20sp"
            pixlui:typeface="Roboto-Medium.ttf" />
    </RelativeLayout>
</android.support.v7.widget.Toolbar>
