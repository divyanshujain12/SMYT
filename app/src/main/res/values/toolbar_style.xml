<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomToolbar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_navigation_back</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/eighteen_sp</item>
    </style>
    <style name="ToolbarSubtitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/sixteen_sp</item>
    </style>
    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">@dimen/eighteen_sp</item>
    </style>
</resources>