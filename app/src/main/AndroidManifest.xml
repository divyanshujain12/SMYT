<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.divyanshu.smyt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <application
        android:name=".activities.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.CategoriesActivity" />
        <activity android:name=".activities.CategoryDescriptionActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.UserProfileActivity" />
        <activity android:name=".activities.RecordVideoActivity" />
        <activity
            android:name=".activities.OtherUserProfileActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activities.ForgotPassword" />

        <activity
            android:name=".activities.UserSettingActivity"
            android:configChanges="orientation|screenSize|keyboard|screenLayout" />
        <activity android:name=".DialogActivities.UploadNewVideoActivity"/>
        <activity android:name=".DialogActivities.LiveBattleDescActivity"/>
        <activity android:name=".DialogActivities.UploadedBattleDescActivity"/>
        <activity android:name=".DialogActivities.UserVideoDescActivity" />
        <service android:name=".Fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
