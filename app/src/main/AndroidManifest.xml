<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.divyanshu.smyt">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Activities.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.LoginActivity" />
        <activity android:name=".Activities.SignUpActivity" />
        <activity android:name=".Activities.CategoriesActivity" />
        <activity android:name=".Activities.CategoryDescriptionActivity" />
        <activity android:name=".Activities.HomeActivity" />
        <activity android:name=".Activities.UserProfileActivity" />
        <activity android:name=".Activities.RecordVideoActivity" />

        <activity
            android:name=".Activities.OtherUserProfileActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".Activities.ForgotPassword"/>
    </application>

</manifest>