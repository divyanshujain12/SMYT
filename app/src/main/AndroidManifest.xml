<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.divyanshu.smyt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-feature android:name="android.hardware.camera.any" android:required="false" />
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    <uses-feature android:name="android.hardware.microphone" android:required="false" />

    <uses-feature android:glEsVersion="0x00020000" android:required="true" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:name=".activities.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:debuggable="true"
        tools:ignore="HardcodedDebugMode"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SignUpActivity" />
        <activity android:name=".activities.CategoriesActivity" />
        <activity android:name=".activities.CategoryDescriptionActivity" />
        <activity android:name=".activities.HomeActivity" />
        <activity android:name=".activities.UserProfileActivity" />
        <activity android:name=".activities.RecordVideoActivity" />
        <activity
            android:name=".activities.OtherUserProfileActivity"
            android:launchMode="singleTop" />
        <activity android:name=".activities.ForgotPassword" />
        <activity
            android:name=".activities.UserSettingActivity"
            android:configChanges="orientation|screenSize|keyboard|screenLayout" />
        <activity android:name=".DialogActivities.UploadNewVideoActivity" />
        <activity android:name=".DialogActivities.LiveBattleDescActivity" />
        <activity android:name=".DialogActivities.UploadedBattleDescActivity" />
        <activity android:name=".DialogActivities.UserVideoDescActivity" />
        <activity android:name=".DialogActivities.OngoingChallengeDescriptionActivity" />

        <service android:name=".Fcm.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".Fcm.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.ProfileImageFullScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_profile_image_full_screen"
            android:theme="@style/FullscreenTheme"/>
    </application>

</manifest>